{
    "name": "Laravel WordPress Connector",
    "description": "A Laravel package for WordPress database integration with Filament admin management",
    "version": "1.0.0",
    "author": {
        "name": "Sanjaya Dulal",
        "email": "iammrdulal@gmail.com",
        "url": "https://github.com/mrdulal"
    },
    "keywords": [
        "laravel",
        "wordpress",
        "filament",
        "admin",
        "database",
        "integration",
        "cms",
        "content-management"
    ],
    "license": "MIT",
    "homepage": "https://github.com/mrdulal/laravel-wp-connector",
    "repository": {
        "type": "git",
        "url": "https://github.com/mrdulal/laravel-wp-connector.git"
    },
    "bugs": {
        "url": "https://github.com/mrdulal/laravel-wp-connector/issues"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/mrdulal"
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "filament/filament": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MrDulal\\WpConnector\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MrDulal\\WpConnector\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MrDulal\\WpConnector\\WpConnectorServiceProvider"
            ],
            "aliases": {
                "Wp": "MrDulal\\WpConnector\\Facades\\Wp"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
