  "screenshots": [
    {
      "title": "WordPress Users Management",
      "url": "https://raw.githubusercontent.com/mrdulal/laravel-wp-connector/main/screenshots/users.png",
      "description": "Manage WordPress users through Filament admin panel"
    },
    {
      "title": "WordPress Posts Management",
      "url": "https://raw.githubusercontent.com/mrdulal/laravel-wp-connector/main/screenshots/posts.png",
