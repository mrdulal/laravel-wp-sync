      "title": "Dashboard Widgets",
      "url": "https://raw.githubusercontent.com/mrdulal/laravel-wp-connector/main/screenshots/dashboard.png",
      "description": "Real-time statistics and recent content widgets"
    }
  ],
  "requirements": {
    "php": "^8.1",
    "laravel": "^10.0|^11.0",
    "filament": "^3.0"
  },
  "installation": {
    "composer": "composer require mrdulal/laravel-wp-connector",
    "publish": "php artisan vendor:publish --tag=wp-connector-config",
    "migrate": "php artisan migrate",
    "clear": "php artisan config:clear"
  },
